<%= f.input :name , :label => "客戶名稱" %>
<%= f.input :country_id , :label => "國家" , :prompt => false , :collection => Country.select('id , name').order('id ASC').map{|country|[country.name , country.id]} %>
<%= f.input :addr , :label => "地址" %>
<%= f.input :contact, :label => "聯絡人" %>
<%= f.input :email, :label => "E-mail" %>
<%= f.input :phone, :label => "電話" %>
<%= f.input :fax, :label => "傳真" %>
<%= f.input :note, :label => "備註" %>
<div class="control-group"><div class="controls"><label></label><%= f.button :button, '清除', :type => 'reset', :class => 'btn btn-red' %>&nbsp;<%= f.button :submit , :value => '送出' , :class => 'btn btn-green' %></div></div>