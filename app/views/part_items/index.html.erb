<section class="row-fluid">
  <h3 class="box-header">零組件列表</h3>
  <div class="box">
    <div class="box-action btn-group">
      <%= link_to "新增" , new_part_item_path , :class => "btn btn-blue" %>
    </div>
    <table class="table table-bordered table-striped table-condensed table-hover">
      <thead>
        <tr>
          <th class="col1">ID</th>
          <th class="col4">分類</th>
          <th class="col4">名稱</th>
          <th class="col2">目前庫存量</th>          
          <th class="col2">管理</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>                     
          <tr>
            <td class="center"><%= item.id %></td>
            <td class="center"><%= item.cate_name %></td>
            <td class="center"><%= item.name %></td>
            <td class="center"><%= item.inv %></td>
            <td class="center">
              <%= link_to "編輯" , edit_part_item_path(item) , :class => "btn btn-cyan" %>
              <%= link_to "刪除" , part_item_path(item) , :method => "delete" , :class => "btn btn-danger" , :"data-confirm" => "確定進行刪除的動作？" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>