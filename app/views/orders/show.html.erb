<section class="row-fluid">
  <h3 class="box-header">訂單明細</h3>
  <div class="box">
    <div class="box-action btn-group">
      <%= link_to "新增" , new_order_path , :class => "btn btn-blue" %>
    </div>
    <table class="table table-bordered table-striped table-condensed table-hover">
      <thead>
        <tr>
          <th class="col6">訂單編號</th>
          <th class="col6">國家</th>
          <th class="col10">公司名稱</th>
          <th class="col6">聯絡人</th>
          <th class="col10">地址</th>
          <th class="col6">電話</th>
          <th class="col6">傳真</th>
          <th class="col6">E-mail</th>
          <th class="col6">備註</th>
          <th class="col6">管理</th>
        </tr>
      </thead>
      <tbody>                 
        <tr>
          <td class="center"><%= @order.id %></a></td>
          <td class="center"><%= @order.customer_country %></td>
          <td class="center"><%= @order.name %></td>
          <td class="center"><%= @order.contact %></td>
          <td class="center"><%= @order.addr %></td>
          <td class="center"><%= @order.phone %></td>
          <td class="center"><%= @order.fax %></td>
          <td class="center"><%= @order.email %></td>
          <td class="center"><%= @order.note %></td>            
          <td class="center">
            <%= link_to "編輯" , edit_order_path(@order) , :class => "btn btn-cyan" %>
            <%= link_to "刪除" , order_path(@order) , :method => "delete" , :class => "btn btn-danger" , :"data-confirm" => "確定進行刪除的動作？" %>
          </td>
        </tr>
      </tbody>
    </table>
    <table class="table table-bordered table-striped table-condensed table-hover">
      <thead><tr>
        <th>#</th>
        <th>Item No.</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Amount</th>
      </tr></thead>
      <tbody>
        <% @order_items.each_with_index do |t,i| %>
            <% if t.item_name!=nil && !t.item_name.empty? %>
              <tr>
                <td class="center"><%= i+1 %></td>
                <td class="center"><%= t.item_name %></td>
                <td class="text-right" style="text-align:right"><%= t.qty %></td>
                <td class="text-right" style="text-align:right"><%= t.price %></td>
                <td class="text-right" style="text-align:right"><%= t.qty*t.price %></td>          
              </tr>
            <% end %>
        <% end %>
        <tr>
          <td >總計</td>
          <td></td>
          <td class="text-right" style="text-align:right"><%= @order.total_qty %></td>
          <td></td>
          <td class="text-right" style="text-align:right"><%= @order.total_price %></td>
        </tr>
      </tbody>
    </table>
  </div>
</section>
