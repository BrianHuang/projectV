<section class="row-fluid">
  <h3 class="box-header">預熱塞列表</h3>
  <div class="box">
    <div class="box-action btn-group">
      <%= link_to "新增" , new_item_path , :class => "btn btn-blue" %>
    </div>
    <table class="table table-bordered table-striped table-condensed table-hover">
      <thead>
        <tr>
          <th class="col6">ID</th>
          <th class="col10">分類</th>
          <th class="col10">名稱</th>
          <th class="col10">Reference No.</th>
          <th class="col6">定價</th>
          <th class="col6">目前庫存量</th>
          <th class="col6">管理</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>                     
          <tr>
            <td class="center"><%= link_to item.id, item_path(item) %></td>
            <td class="center"><%= item.cate_name %></td>
            <td class="center"><%= link_to item.name, item_path(item) %></td>
            <td class="center"><%= item.ref_no %></td>
            <td class="center"><%= item.price %></td>
            <td class="center"><%= item.inv %></td>
            <td class="center">
              <%= link_to "編輯" , edit_item_path(item) , :class => "btn btn-cyan" %>
              <%= link_to "刪除" , item_path(item) , :method => "delete" , :class => "btn btn-danger" , :"data-confirm" => "確定進行刪除的動作？" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>